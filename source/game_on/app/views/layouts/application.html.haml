!!! 5
%html
  %head
    %title Game-on
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = yield :head

  %body
    - if flash[:error]
      #error.message= flash[:error]
    - elsif flash[:warning]
      #warning.message= flash[:warning]
    - elsif flash[:notice]
      #notice.message= flash[:notice]
    - elsif flash[:alert]
      #alert.message= flash[:alert]
    #main
      %ul.hmenu
        - if user_signed_in?
          %li
            = link_to 'Logout', logout_path, :method => :delete, class: "btn logout"
            |
            = link_to 'Your account', user_path(current_user), class: "link"
        - else
          %li
            = link_to 'Sign up', signup_path, class: "link"
            or 
            = link_to 'Login', login_path, class: "link"
      = yield
