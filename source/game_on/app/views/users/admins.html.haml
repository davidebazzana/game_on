%h1 Admins

%table#admins
  %thead
    %tr
      %th Username
      %th Email
  %tbody
    - @admins.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= link_to 'Show', user, class: "link"
        - if can?(:update, user) || can?(:assign_role, user)
          %td= link_to 'Edit', edit_user_path(user), class: "btn"

= link_to 'Back', :back, class: "link"
= link_to 'Games list', games_path, class: "link"
= link_to 'Contact Admins',new_contactadm_path(:user=>current_user), class: "btn"