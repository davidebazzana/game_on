%h2 User #{@user.id}

%h3 Username:
%p#description=  @user.username

%h3 Email:
%p#email= @user.email

-if @current_user != @user

  %h1 Add Follow:

  %ul
    -if current_user.friend_with? @user
      %p you already follow #{@user.username}
    -else
      = link_to "Follow", friendships_path(:friend_id => @user), :method => :post

-else

  %table
    %thead
      %tr
        %th Follow

    %tbody
      - for friendship in @user.friendships
        %tr
          %td
            = h friendship.friend.username
            = link_to "remove", friendship, :method => :delete

  %table
    %thead
      %tr
        %th Follower

    %tbody
      - for user in @user.inverse_friends
        %tr
          %td= h user.username

%br

%p= link_to "Find people", users_path
= link_to 'Edit', edit_user_path
= link_to('Delete', @user, method: :delete, data: {})
= link_to 'Back to main menu', games_path


