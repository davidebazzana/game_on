- if @current_user
  = link_to 'Logout', logout_path
  |
  = link_to 'Your account', user_path(@current_user)
- else
  = link_to 'Sign up', signup_path
  or 
  = link_to 'Login', login_path
%h1 Users

%table#users
  %thead
    %tr
      %th Username
      %th Email
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= link_to 'Show', user
        //%td= link_to 'Edit', edit_user_path //ancora da implementare
%br
= link_to 'New user', new_user_path
= link_to 'Games list', games_path

