%h1 Users

%table#users
  %thead
    %tr
      %th Username
      %th Email
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= link_to 'Show', user
        - if can?(:update, user) || can?(:assign_role, user)
          %td= link_to 'Edit', edit_user_path(user)
         
  
%br
= link_to 'Admins', admins_path
%p
= link_to 'Games list', games_path
