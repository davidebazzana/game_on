%h2 Create a new game

= form_tag games_path, :method => :post , :multipart=>true do

    = label :game, :title, 'Title'
    = text_field :game, :title
    = label :game, :info, 'Info'
    = text_field :game, :info
    = label :game, :game_file, 'Attach a file'
    = file_field :game, :game_file 
   
    = submit_tag 'Submit game'

