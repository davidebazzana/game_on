- if session[:current_user_id]
  = link_to 'Logout', logout_path
- else
  = link_to 'Sign up', signup_path
  or 
  = link_to 'Login', login_path
%h1 All Games
  
%table#games
  %thead
    %tr
      %th Game Title
      %th Info
  %tbody
    - @games.each do |game|
      %tr
        %td= game.title
        %td= link_to "More about #{game.title}", game_path(game)


